@model IEnumerable<TradingCms.DTOs.CategoryDTO>
<!-- INDEX.HTML -> MAIN -->
<section class="fluid-container">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="main-wrap">
                    <!-- LEFT-SIDEBAR -->
                    <nav class="left-sidebar-wrap">
                        <div class="left-sidebar-title">
                            Категории
                        </div>
                        <ul class="left-sidebar-nav">
                            @foreach (var item in Model.Where(item => item.TopId == 0))
                            {
                                <li class="left-sidebar-nav-li">
                                    <a href="@Url.Action("Subcategories", "Category", new { id = item.Id })" target="_self" title="">
                                        @item.Name
                                        <i class="fa fa-angle-right left-sidebar-nav-li-angle"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                    <div class="right-content-wrap">
                        <!-- OVER-SLIDER-BUTTONS -->
                        <div class="over-slider-btns">
                            <a class="over-slider-btn-1" href="#">Тут что-то будет</a>
                            <a class="over-slider-btn-2" href="#">Тут что-то будет</a>
                        </div>
                        <!-- SLIDER-MAIN -->

                        <div class="carousel">
                            <a class="prev" data-prev-mixed></a>
                            <ul>
                                <li>
                                    <img src="~/Content/Images/slide-1.jpg" />
                                </li>
                                <li>
                                    <img src="~/Content/Images/slide-2.jpg" />
                                </li>
                                <li>
                                    <img src="~/Content/Images/slide-3.jpg" />
                                </li>
                                <li>
                                    <img src="~/Content/Images/slide-4.jpg" />
                                </li>
                                <li>
                                    <img src="~/Content/Images/slide-5.jpg" />
                                </li>
                            </ul>
                            <a class="next" data-next-mixed></a>
                            <a class="badge"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
